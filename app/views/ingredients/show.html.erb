<h1><%= @ingredient.name %></h1>
<%= link_to :back, :back %>
<h2>In Stock: <%= @ingredient.in_stock_str %></h2>
<% unless @ingredient.recipes.empty? %>
    <h2>In Recipes</h2>
    <ul>
        <% @ingredient.recipes.each do |recipe| %>
            <li><%= link_to recipe.name, recipe %></li>
        <% end %>
    </ul>
<% end %>
